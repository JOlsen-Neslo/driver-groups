<% provide(:title, @user.person.name.value) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.person.name.value %>
            </h1>
            <h2>
                <%= @user.person.date_of_birth %>
            </h2>
            <%= link_to 'Edit Profile', edit_user_path(:id => @user.id) %>
        </section>
    </aside>
</div>
